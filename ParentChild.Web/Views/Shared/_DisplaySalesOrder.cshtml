
<h4>@ViewBag.Title</h4>
<hr />
<p data-bind="text: MessageToClient"></p>
<div>
    <div class="form-group">
        <label class="control-label">Customer Name:</label>
        <span data-bind="text: CustomerName" class="form-control"></span>
    </div>
    <div class="form-group">
        <label class ="control-label">P.O. Number:</label>
        <span data-bind="text: PONumber" class="form-control"></span>
    </div>
</div>

<table class="table table-striped">
    <tr>
        <th>Product Code</th>
        <th class="text-right">Quantity</th>
        <th class="text-right">Unit Price</th>
        <th class="text-right">Extended</th>
    </tr>
    <tbody data-bind="foreach: Items">
        <tr>
            <td class="form-group"><span data-bind="text: ProductCode" class="form-control input-sm" /></td>
            <td class="form-group"><span data-bind="text: Quantity" class=" form-control input-sm text-right" /></td>
            <td class="form-group"><span data-bind="text: UnitPrice" class=" form-control input-sm text-right" /></td>
            <td class="form-group"><span data-bind="text: ExtendedPrice" class="form-control text-right"></span></td>
        </tr>
    </tbody>
    <tr>
        <td>&nbsp;</td>
        <td>&nbsp;</td>
        <td class="form-group"><span class="form-control text-right">Total</span></td>
        <td class="form-group"><span data-bind="text: Total" class="form-control text-right"></span></td>
        <td>&nbsp;</td>
    </tr>
</table>

<p>
    <a href="@Url.Action("Index")" class="btn btn-default btn-sm">&laquo;Back to List</a>
</p>

